pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
              sh  '''
              ls -la
              node --version
              npm --version
              npm ci
              npm run build
              ls -la
              echo "Hello World from jenkin"
              whoami
              '''
                
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
             steps {
              sh  '''
              echo 'Test stage'
              test -f buld/index.html
              nmp test
              '''
              // test -f buld/index.html
             } 

        }
    }
    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}